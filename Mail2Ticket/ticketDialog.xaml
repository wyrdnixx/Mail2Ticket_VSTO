<UserControl x:Class="Mail2Ticket.ticketDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchBox" Grid.Row="0" Height="25" Margin="0,0,0,5"  />
        <ListBox x:Name="ResultList" Grid.Row="1" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5">
            <Label Content="Ticketnummer:" VerticalAlignment="Center"/>
            <TextBox x:Name="TicketNumberBox" Width="150" Margin="5,0,0,0"/>
        </StackPanel>
        <Button x:Name="ConfigButton" Grid.Row="3" Content="Konfiguration" Width="120" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
